{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "allowJs": true,
    "baseUrl": ".",
    "lib": ["ES2020", "DOM"],
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.js", "tests/**/*.js", "*.js"],
  "exclude": ["node_modules"]
}
